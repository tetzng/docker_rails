<main class="single-container">
<div class="single-inner">
<h1><%= "\"#{@keyword}\"の検索結果" %></h1>
<h2><%= "#{@albums.length}件" %></h2>

<% @albums.each do |album| %>
  <section class="album-container">
    <div class="album-left">
      <div>
        <%= link_to album_path(album.id) do %>
          <%=  image_tag "#{album.images[0]["url"]}", class: "album-image track-image" %>
        <% end %>
      </div>
    </div>
    <div class="album-right">
      <ol class="tracklist tracklist-large">
        <li class="tracklist-row">
          <div class="tracklist-col-left">
            <div>
              <%= link_to album_path(album.id) do %>
                <span><%= album.name %></span> - <%= album.album_type %>
              <% end %>
            </div>
            <div>
              <% album.artists.each_with_index do |artist, index| %>
                <% if index != 0 %>&nbsp;/&nbsp;<% end %>
                <%= link_to artist_path(artist.id) do %>
                  <%= artist.name %>
                <% end %>
              <% end %>
            </div>
            <div><%= album.release_date %></div>
          </div>
          <div class="tracklist-col-right">
          </div>
        </li>
      </ol>
    </div>
  </section>
<% end %>
</div>
</main>