<div>
  <%= form_with url: albums_path, method: :get, local: true, class: "top-search-form" do |f| %>
    <div class="form-group">
      <%= f.label :album_name, "アルバム名", class: "name-label" %>
      <%= f.text_field :album_name, placeholder: "アルバム名で検索" %>
      <%= f.label :submit_album do %>
        <i class="fas fa-search"></i>
      <% end %>
      <%= f.submit 'Search', id: "submit_album" %>
    </div>
  <% end %>
</div>
