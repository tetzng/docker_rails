<div class="artist-header" style="background-image: url(<%= "#{@artist.images[0]["url"]}" %>);" >
<h1><%= @artist.name %></h1>
</div>
<main class="single-container">
<video controls="" autoplay="" name="media" data-vscid="mipqfx065"><source src="<%= @track.preview_url %>" type="audio/mpeg"></video>

  <%
=begin%>
 <div>
    <%= image_tag "#{@artist.images[0]["url"]}", class: "artist-image" %>
  </div>
  <div>
    <%= @artist.name %>
  </div> 
<%
=end%>
  <% @albums.each do |album| %>
    <section class="album-container">
      <div class="album-left">
        <div>
          <%=  image_tag "#{album.images[0]["url"]}", class: "album-image" %>
        </div>
        <h2><%= album.name %></h2>
        <p>
          <%= album.release_date %>
        </p>
      </div>
      <div class="album-right">
        <ol class="tracklist">
          <% album.tracks.each do |track| %>
            <li class="tracklist-row">
              <div class="tracklist-col-left">
                <%= "#{track.track_number}. #{track.name}" %>
              </div>
              <div class="tracklist-col-right">
                <%= Time.at(track.duration_ms / 1000).strftime("%M:%S") %>
              </div>
            </li>
          <% end %>
        </ol>
      </div>
    </section>
  <% end %>
<a class="btn">button</a>
<a class="btn btn-light">btn-light</a>
</main>


<footer><%= @track.artists[0].name %><%= @track.album.name %><%= @track.inspect %></footer>
